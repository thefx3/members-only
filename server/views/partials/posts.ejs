<section class="posts-list">
    <% if (posts && posts.length) { %>
      <% posts.forEach((post) => { %>
        <article class="post-card">
          <header>
            <h2><%= post.title %></h2>
            <p class="post-meta">
              Published by <strong><%= post.author %></strong> on <%= post.date %>
            </p>
          </header>
          <p><%= post.content %></p>
        </article>
      <% }) %>
    <% } else { %>
      <p class="empty-posts">
        No posts yet.
      </p>
    <% } %>
  </section>
  