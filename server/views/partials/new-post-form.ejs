<main class="new-post-container">
  <div class="post-card">
    <h1>Create a new post</h1>
    <p class="subtitle">and share your ideas</p>

    <% if (formError) { %>
      <p class="form-error"><%= formError %></p>
    <% } %>

    <form action="/new-post" method="POST" class="new-post-form">
      <label for="title">Title</label>
      <input
        type="text"
        id="title"
        name="title"
        value="<%= formData && formData.title ? formData.title : '' %>"
        required
      >

      <label for="content">Message</label>
      <textarea id="content" name="content" required><%= formData && formData.content ? formData.content : '' %></textarea>

      <button type="submit">Publish</button>
    </form>
  </div>
</main>
